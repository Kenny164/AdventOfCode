{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build current dir",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-g",
                "${fileDirname}\\*.cpp",
                "-o",
                "${fileDirname}\\a"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}